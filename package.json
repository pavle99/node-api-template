{
  "name": "node-api-template",
  "version": "1.0.0",
  "description": "📝 A node backend template",
  "main": "dist/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "clean": "rimraf ./dist ./src/client/client.ts ./src/docs/api.yaml",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npm run clean && npm run lint && tsc && echo \"✅ Build ready in the /dist folder. Run it with npm run start\"",
    "start": "NODE_ENV=production node .",
    "dev": "NODE_ENV=development tsx watch ./src/index.ts",
    "dev:no-reload": "NODE_ENV=development tsx ./src/index.ts",
    "lint": "eslint  --cache \"src/**/*.{js,ts}\"",
    "lint:fix": "eslint  --cache --fix \"src/**/*.{js,ts}\"",
    "generate:client": "NODE_ENV=development tsx ./src/scripts/clientGenerator.ts",
    "generate:docs": "NODE_ENV=development tsx ./src/scripts/docsGenerator.ts"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": "npm run lint:fix"
  },
  "keywords": [
    "Nodejs",
    "typescript",
    "express",
    "boilerplate",
    "template",
    "zod"
  ],
  "license": "MIT",
  "dependencies": {
    "@total-typescript/ts-reset": "^0.4.2",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-zod-api": "^10.1.2",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.2",
    "mongoose": "^7.5.2",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.2",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^3.12.7",
    "typescript": "^5.0.3"
  }
}
